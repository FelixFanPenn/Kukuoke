<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="pennapps.com.kukuoke.SettingsActivity">

    <ImageView
        android:id="@+id/chickenIconGlow"
        android:layout_width="600px"
        android:layout_height="600px"
        android:layout_marginTop="200px"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />

    <TextView
        android:id="@+id/usersNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chickenIconGlow"
        android:layout_marginTop="20px"
        android:textSize="80px"
        />

    <TextView
        android:id="@+id/usersEmailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/usersNameText"
        android:layout_marginTop="20px"
        android:textSize="80px"
        />

    <TextView
        android:id="@+id/getUniqueIdText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usersEmailText"
        android:layout_marginTop="20px"
        android:textSize="80px"
        />

    <Button
        android:id="@+id/signOutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="12"
        android:text="SIGN OUT"
        android:textColor="@color/lightGrey"
        app:backgroundTint="@color/darkGrey"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="200px"
        app:backgroundTint="@color/darkGrey"
        android:textColor="@color/lightGrey"/>

</android.support.constraint.ConstraintLayout>
